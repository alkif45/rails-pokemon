<div class="container mt-3">
  <h4><%= link_to "< Pokedex", root_path, class: "btn btn-link" %></h4>

  <div class="row">
    <div class="col-md-6">
      <div class="card card-trainer-size bg-light-blue">
        <%= image_tag url_for(@trainer.photo), alt: "Trainer picture", class: "trainer-pic-rounded" %>
        <h4 class="text-white text-center"><%= @trainer.name %></h4>
        <h5 class="golden text-center"><%= @trainer.age %></h5>
      </div>
    </div>
    <div class="col-md-6">
      <h3>Their pokemon</h3>
      <div class="row">
        <% @trainer.pokeballs.each do |pokeball| %>
          <div class="col-md-6">
            <div class="card bg-light-blue mb-3">
              <%= image_tag url_for(pokeball.pokemon.photo), alt: "Pokemon photo", class: "pokemon-pic-rounded" %>
              <h4 class="text-center text-white"><%= pokeball.pokemon.name %></h4>
              <h4 class="text-center golden"><%= pokeball.pokemon.element_type %></h4>
              <h5 class="p-2 text-center"><%= "Caught on #{pokeball.caught_on} at #{pokeball.location}" %></h5>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
