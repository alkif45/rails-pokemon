<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>


<div class="container mt-3">
  <h4><%= link_to "< Pokedex", root_path, class: "btn btn-link" %></h4>

  <div class="row">
    <div class="col-md-6">
      <div class="card card-pokemon-size bg-light-blue">
        <%= image_tag url_for(@pokemon.photo), alt: "Pokemon picture", class: "pokemon-pic-rounded" %>
        <h4 class="text-white text-center"><%= @pokemon.name %></h4>
        <h5 class="golden text-center"><%= @pokemon.element_type %></h5>
      </div>
    </div>
    <div class="col-md-6">
      <h5 class="text-white">Do you dare to catch this pokemon?</h5>
      <%= simple_form_for [@pokemon, @pokeball] do |f| %>
        <%= f.association :trainer, collection: Trainer.all, prompt: "Who's trying their luck?" %>
        <%= f.input :location, label: "Where are you?" %>
        <%= f.input :caught_on, as: :string, input_html: { type: 'date' } %>
        <%= f.button :submit, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
